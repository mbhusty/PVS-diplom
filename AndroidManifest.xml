<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pvs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme = "@style/AppTheme" >
        <activity
            android:name="com.example.pvs.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pvs.LectoinActivity"
            android:label="@string/about_title" >
        </activity>
        <activity
            android:name="com.example.pvs.Test"
            android:label="@string/title_activity_test" >
        </activity>    
        
<activity android:name=".SplashScreen" android:theme="@style/Theme.Splash">
    <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
    </intent-filter>
</activity>     
       
        <activity
	android:name=".ViewActivity"
	android:label="Просмотр">
	<intent-filter>
		<action
			android:name=".ViewActivity" />
		<category
			android:name="android.intent.category.DEFAULT"></category>
	</intent-filter>
</activity>
    </application>
</manifest>
